<div class="entry clearfix">
    <div class="prefix_2 clearfix">
    <% if content and content.title and content.title.strip.length > 0 %>
       <h2 class="content-teaser-title"><a href="<%=content.path%>"><%= content.title %></a></h2>
    <% end %>
    </div>
    <div class="grid_2 clearfix">
      <% if content and content['creation_date'] and content['creation_date'].to_s.strip.length > 0 %>
        <div class="content-teaser-date">
           <%=content.creation_date.kind_of?(DateTime)?content.creation_date.strftime("%d . %m . %Y"):Time.parse(content.creation_date.to_s).strftime("%d . %m . %Y ")%>
        </div>
      <% end %>  
  
      <% if content and content.get_categories && content.get_categories.length > 0 %>
        <% content.get_categories.each do |category| %>
          <div class="content-teaser-category">
            <a href='<%="/category/#{category.id}"%>'><%= category.description %></a>
          </div>
        <% end %>
      <% end %> 
    </div>
    <div class="grid_7" style="margin-left:0px; margin-right:0px">
      
      <!-- Content body -->

      <div class="content-teaser-body">
        <%= content.body if content and content.body%>
      </div>      
      
    </div>

</div>