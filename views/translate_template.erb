<!-- Renders the form to edit an element -->

<script type="text/tmpl" id="template_translation_template_form">

  <form name="template_translation" class="form-horizontal" id="template_translation">

   <input type="hidden" name="template_id" value="<%%=templateId%>"/>
   <input type="hidden" name="language" value="<%%=language%>"/>


    <div class="form-group">
      <label for="language" class="col-md-12">Idioma <span class="mandatoryfield">*</span></label>
      <div class="col-md-11">
        <select name="language" id="language" class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="text" class="col-md-12">Plantilla</label>
      <div class="col-md-12">
        <textarea rows="20" id="text" name="text" class="form-control editable_text"><%% if (entity) {%><%%=entity.text %><%% } %></textarea>
      </div>
    </div>


    <div class="form-group">
      <div class="col-md-12">
         <input id="update_button" type="button"
                class="btn btn-sm btn-primary update-entity-button action-button entity-management-button pull-right"
                value="<%=t.entitymanagement.update%>"/>
      </div>
    </div>

  </form>

</script>