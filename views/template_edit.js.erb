require(['jquery', 'YSDForms'], function($, YSDForms) {

    $(document).ready(function() {

        YSDForms.improve();

        // Embed translations
        <% if @show_translations and @tmpl %>
        $.ajax({url: '/admin/cms/translate/template/'+ <%=@template.id%>, dataType: 'text'}).done(function(html) {
            var dom = $('<html />').prop('innerHTML', html);
            $('#template_translations_container').html(dom.find('body #page_wrapper'));
            $('head').append(dom.find('script:not([src])'));
        });
        <% end %>

    });
});