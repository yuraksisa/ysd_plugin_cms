                  <% if view_field.link %>
                    <a href="<%=view_field.evaluate_link(element)%>" <%unless view_field.link_class.to_s.empty?%>class="<%= view_field.link_class%>"<%end%>>
                  <% end %>
                  <% if view_field.image %>
                       <img src="<%=view_field.field.split(".").inject(element){|result, method| result.send(method.to_sym)}%>" <%unless view_field.image_class.to_s.empty?%>class="<%= view_field.image_class%>"<%end%>/>
                  <% else %>
                       <% result = view_field.field.split(".").inject(element){|result, method| result.send(method.to_sym)}
                          if result.is_a?Time
                            result = result.strftime('%d.%m.%y')
                          end 
                        %>   
                       <%= result %>
                  <% end %>
                  <% if view_field.link %>
                    </a>
                  <% end %>
