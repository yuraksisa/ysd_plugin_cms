<script type="text/javascript">

require(['jquery', 'YSDEntityManagementComplementHooks'],
        function($, EntityManagementComplementHooks) {

   MenuItemTranslatePlugin = function() {

     this.onEdit = function(entity) {
       $('#menu_item_translate a').attr('href', '/admin/cms/translate/menuitem/' + entity.id + '?destination=/admin/cms/menu-item-management/' + entity.menu_name + '/' + entity.id); 
     }
   }
             
   var menuItemTranslatePlugin = new MenuItemTranslatePlugin();
   EntityManagementComplementHooks.register(menuItemTranslatePlugin);	
   
});          
       
</script>