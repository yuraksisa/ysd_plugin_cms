<div id="pages_holder">
  <% if @pages.size == 0 %>
  <p class="text-center">No hay datos</p>
  <% else %>
  <table id="pages_table" class="table">
    <thead>
    <tr>
      <th>TÃ­tulo</th>
      <th style="width: 15%;">Estado</th>
      <th style="width: 160px;">Autor</th>
      <th style="width: 160px;">Fecha</th>
      <th class="text-center" style="width: 160px;">Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% @pages.each do |page| %>
      <tr id="page-<%=page.id%>">
        <td><%=page.title%></td>
        <td class="hidden-xs">
          <span class="label <%if page.publishing_state_id == 'DRAFT'%>label-warning<%elsif page.publishing_state_id=='PUBLISHED'%>label-success<%end%>"><%if page.publishing_state_id == 'DRAFT'%>BORRADOR<%elsif page.publishing_state_id=='PUBLISHED'%>PUBLICADA<%end%></span>
        </td>
        <td><%=page.publishing_publisher%></td>  
        <td>
          <% if page.publishing_date %>
          <%= page.publishing_date.strftime('%d/%m/%Y') %>
          <% end %>
        </td>  
        <td class="text-center">
          <div class="btn-group">
            <button class="btn btn-xs btn-default edit_page_button" rel="<%=page.id%>" type="button"><i class="fa fa-pencil"></i></button>
            <% if @translations %>
              <button class="btn btn-xs btn-default translate_page_button" rel="<%=page.id%>" type="button" title="Traducir"><i class="fa fa-random"></i></button>
            <% end %>
            <button class="btn btn-xs btn-default delete_page_button" rel="<%=page.id%>" type="button"><i class="fa fa-times"></i></button>
            <button class="btn btn-xs btn-default open_in_browser_button" rel="<%=page.alias%>" type="button"><i class="fa fa-external-link"></i></button>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <% end %>
</div>
