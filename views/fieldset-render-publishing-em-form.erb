<div id="publishing_form" class="guiblock">
  
  <div class="guiblock-title">
    <%= t.guiblock.publishing.title %>
  </div>

  <div class="formrow">

   <div class="entity-field" style="border-bottom: none">
     <span class="entity-fieldlabel smaller_text less_contrast_text"><%=t.guiblock.publishing.status.title%></span> 
     <span class="entity-fieldvalue smaller_text" style="display:inline"> <%% if (entity) { %>
     <%%= self.model.entityHooks[0].formatPublishingState(entity) %> <%% } %></span> 
   </div>

   <div class="entity-field" style="border-bottom: none">
     <span class="entity-fieldlabel smaller_text less_contrast_text"><%=t.guiblock.publishing.publishing_date.title%></span> 
     <span class="entity-fieldvalue smaller_text" style="display:inline"> <%% if (entity) { %>
     <%%= self.formatDate(entity.publishing_date) %> <%% } %></span> 
   </div>

   <div class="entity-field" style="border-bottom: none">
     <span class="entity-fieldlabel smaller_text less_contrast_text"><%=t.guiblock.publishing.publisher.title%></span> 
     <span class="entity-fieldvalue smaller_text" style="display:inline"> <%% if (entity) { %>
     <%%= entity.publishing_publisher %> <%% } %></span> 
   </div>

  </div>

  <div class="formrow-botonera top-separator top-space right_text">
    <%= publishing_buttons %>
  </div>

</div>