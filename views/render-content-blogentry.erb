<div class="content-blogentry-wrapper">

  <% if content and content.title and content.title.strip.length > 0 %>
    <h2 class="content-title"><a href="<%= (content.alias.strip.length>0)?(content.alias):(content.path)%>"><%= content.title%></a></h2>
  <% end %>

  <div class="content-header">
    <% separator = false %>
    <% if content and content['creation_date'] and content['creation_date'].to_s.strip.length > 0 %>
      <span class="date"><%=content.creation_date.kind_of?(DateTime)?content.creation_date.strftime("%d.%m.%Y"):Time.parse(content.creation_date.to_s).strftime("%d.%m.%Y")%></span>
      <% separator = true %>
    <% end %>

    <% if content and content['creation_user'] and content['creation_user'].strip.length > 0%>
      <% if separator %>
        <span class="separator">&middot;</span>
      <% end %>
      <span class="by"><%= t.content.by.capitalize%></span> 
      <span class="by-author"><%= author %></span>&nbsp;
      <% separator = true %>
    <% end %>
  
    <% if content and content.get_categories && content.get_categories.length > 0 %>
      <% if separator %>
        <span class="separator">&middot;</span>
      <% end %>
      <span class="categories">
        <% content.get_categories.each do |category| %>
          <span class="category"><a href='<%="/category/#{category.id}"%>'><%= category.description %></a></span>
        <% end %>
      </span>
    <% end %> 
  </div>

  <% if content and content.photo_url_full and not content.photo_url_full.empty?%>
  <div class="content-photo">
    <img src="<%=content['photo_url_full']%>" class="content-photo-img"/>
  </div>
  <% end %>

  <% if defined?element_custom_above and element_custom_above.strip.length > 0%>
  <div class="content-custom">
    <%= element_custom_above %>
  </div>
  <% end %>

  <% if defined?content_above_body and content_above_body %>
    <div class="content-above-body">
      <% content_above_body.each do |c| %>
        <%= c[:body] %>
      <% end %>
    </div>
  <% end %>

  <div class="content-body">
    <%= content_body if content_body%>
  </div>
  
  <% if defined?content_below_body and content_below_body %>
    <div class="content-below-body">
      <% content_below_body.each do |c| %>
        <%= c[:body] %>
      <% end %>     
    </div>
  <% end %>

  <% if defined?element_custom and element_custom.strip.length > 0 %>
  <div class="content-custom">
    <%= element_custom %>
  </div>
  <% end %>

  <% if defined?element_custom_nogroup and element_custom_nogroup.strip.length > 0 %>
  <div class="content-custom-nogroup">
    <%= element_custom_nogroup %>
  </div>
  <% end %>

  <% if defined?content_above_actions and content_above_actions %>
    <div class="content-above-actions">
      <% content_above_actions.each do |c| %>
        <%= c[:body] %>
      <% end %>   
    </div>
  <% end %>

  <% if defined?element_actions and element_actions.strip.length > 0 %>
  <div class="content-actions">
    <%= element_actions %>
  </div>
  <% end %>

  <% if defined?element_custom_extensions and element_custom_extensions.strip.length > 0 %>
  <%= element_custom_extensions if defined?element_custom_extensions %>
  <% end %>

  <% if defined?element_actions_extensions and element_actions_extensions.strip.length > 0 %>
  <%= element_actions_extensions if defined?element_actions_extensions%>
  <% end %>

</div>  